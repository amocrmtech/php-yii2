{
  "name": "amocrmtech/php-yii2",
  "description": "Yii2 package",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Roman Kulikov",
      "email": "r.v.kulikov@yandex.ru"
    }
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",
    "ext-pdo": "*",
    "yiisoft/yii2": "~2.0",
    "yiisoft/yii2-httpclient": "~2.0",
    "yiisoft/composer-config-plugin": "~0",
    "opis/closure": "3.6.x-dev@dev"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "AmoCRMTech\\Yii2\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-2.0.x": "2.0.x-dev"
    },
    "config-plugin": {
      "params": [
        "config/params.php",
        "?config/params-local.php"
      ],
      "common": "config/common.php"
    }
  }
}